{% extends "base.html.twig" %}

{% block content %}
    <div>
        <h1>Articles</h1>
        <label for="myInput"></label><input class="form-control mt-4" id="myInput" type="text" placeholder="Chercher..">
        <section class="article-list">
            {% for article in articles %}
                <div class="rounded article media mySearch">
                    <div class="media-body">
                        <div class="row">
                            <div class="each-date col-2">{{ article.mTime|date('M y') }}</div>
                            <a href="{{ path('blog', {'tag':article.filenameWithoutExtension}) }}"
                               class="each-title col-8">
                                {{ article.filenameWithoutExtension|replace({"-" : " "}) }}
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center card bg-alerte">Aucun article pour le moment</p>
            {% endfor %}
        </section>
    </div>
{% endblock %}
